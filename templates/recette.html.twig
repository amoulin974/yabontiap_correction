{% extends 'base_template.html.twig' %}
    {% block title %}{{recette.nom}} - {{ constant('WEBSITE_TITLE')}}{% endblock %}

{% block content %}
    <main>
        <h1>{{recette.nom}}</h1>
<!--                Affichage de la description de la recette et de l'image-->
        <div class="row">
            <div class="col-md-9">
                <img src="image/{{recette.image}}"  alt="">
                <p>{{recette.description}}</p>


            </div>
            <div class="col-md-3">
                <h6>Ingr√©dients</h6>

                <ul>
    

                    {% for ingredientQuantifie in recette.ingredientQuantifies %}
                        <li>{{ingredientQuantifie.ingredient.nom}} - {{ingredientQuantifie.quantite}}</li>
                    {% endfor %}

                    

                </ul>
            </div>
        </div>        
    </main>

{% endblock %}