{% extends 'base_template.html.twig' %}

    {% block title %}Les recettes sous forme de tableau - {{ constant('WEBSITE_TITLE')}}{% endblock %}

   
    

    
{% block content %}
    <main>
        <h1>Les recettes</h1>
        <table id="matable" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Nom</th>
                    <th>Cat√©gorie</th>

                </tr>
            </thead>
            <tbody>



        {% for recette in recettes %}           
            <tr>
                <td><img src='image/{{recette.image}}' alt=""></td>
                <td><a href="index.php?controleur=recette&methode=afficher&id_recette={{recette.id}}">{{recette.nom}}</a></td>
                <td>{{recette.categorie.nom}}</td>

            </tr>
        {% endfor %}
        
            </tbody>
        </table>
    </main>
{% endblock %}
  
{% block script %}
    <script src="node_modules/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="node_modules/jquery/dist/jquery.js"></script>
    <script src="node_modules/datatables.net/js/dataTables.js"></script>
    <script src="node_modules/datatables.net-bs5/js/dataTables.bootstrap5.js"></script>
    <script src="JS/messcript.js"></script>
{% endblock %}
